@model UI_NTQ.Models.ProductModel.ProductResponse<UI_NTQ.Models.ProductModel.ProductImg>

@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>ProductDetail</h4>
    <hr />
    <form id="formProduct" asp-controller="Product" asp-action="EditProduct" asp-method="post" enctype="multipart/form-data">
        <dl class="row">
            <div class="col-xl-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
                <input id="id" type="hidden" asp-for="Id" value="@Model.Id">
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                <input name="name" type="text" asp-for="Name" value="@Model.Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Slug)
            </dt>
            <dd class="col-sm-10">
                <input name="slug" type="text" asp-for="Slug" value="@Model.Slug">
                <span asp-validation-for="Slug" class="text-danger"></span>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                <input name="price" type="text" asp-for="Price" value="@Model.Price" required>
                <span asp-validation-for="Price" class="text-danger"></span>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductDetail)
            </dt>
            <dd class="col-sm-10">
                <input name="productdetail" type="text" asp-for="ProductDetail" value="@Model.ProductDetail" required>
                <span asp-validation-for="ProductDetail" class="text-danger"></span>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StatusName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Trending)
                <input name="trending" type="checkbox" asp-for="Trending" value="@Model.Trending" required>
                <span asp-validation-for="Trending" class="text-danger"></span>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TrendName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreateAt)
            </dt>
            <dd class="col-sm-10">
                @{
                    string creatAt = "N/A";
                    if (Model.CreateAt != null)
                    {
                        creatAt = Model.CreateAt.Value.ToString("dd/MM/yyyy");
                    }
                }
                @creatAt
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UpdateAt)
            </dt>
            <dd class="col-sm-10">
                @{
                    string updateAt = "N/A";
                    if (Model.UpdateAt != null)
                    {
                        updateAt = Model.UpdateAt.Value.ToString("dd/MM/yyyy");
                    }
                }
                @updateAt
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DeleteAt)
            </dt>
            <dd class="col-sm-10">
                @{
                    string deleteAt = "N/A";
                    if (Model.DeleteAt != null)
                    {
                        deleteAt = Model.DeleteAt.Value.ToString("dd/MM/yyyy");
                    }
                }
                @deleteAt
            </dd>

            @foreach (var item in Model.ProductImgs)
            {
                <dt class="col-sm-2">

                </dt>
                <dd class="col-sm-10">
                    <img style="height:80px;width:80px" src="http://tuyetvongv3.somee.com/product_content/@item.ImagePath">
                </dd>
            }
            <dt class="col-sm-2">
                <span>Add img</span>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="ProductImgs" type="file" class="form-control" multiple />
            </dd>
        </dl>
        <div>
            <input type="submit" value="Edit" class="btn btn-warning" /> |
            <a asp-action="ListProduct">Back to List</a>
        </div>
    </form>
</div>
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script>
        $().ready(function () {
            $("#formProduct").validate({
                rules: {
                    "name": {
                        required: true,
                        maxlength: 50,
                        minlength: 2
                    },
                    "slug": {
                        required: true,
                        maxlength: 150,
                        minlength: 2
                    }
                }
            });
        });
    </script>
}
