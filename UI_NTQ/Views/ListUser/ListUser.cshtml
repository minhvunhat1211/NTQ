@model UI_NTQ.Common.PagedResult<UserResponse>
@{
    ViewData["Title"] = "ListUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/list_user.css">
<div class="wrapped-all">
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-5">
                            <h2>User <b>Management</b></h2>
                        </div>
                        <div class="col-sm-7">
                            @*<a href="#" class="btn btn-secondary"><i class="material-icons">&#xE147;</i> <span>Add New User</span></a>*@
                            @using (Html.BeginForm("ListUser", "ListUser", FormMethod.Get))
                            {
                                <p>
                                    Filter:
                                    <select name="optionFilter" id="cars">
                                        <option value="ADMIN">Admin</option>
                                        <option value="Active">Active</option>
                                        <option value="Delete">Delete</option>
                                        <option value="Default">Default</option>
                                    </select>
                                    <input type="submit" value="Tìm kiếm" />
                                </p>
                            }

                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Date Created</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.FullName</td>
                                    <td>@item.Email</td>
                                    <td>@item.CreateAt.Value.ToString("dd/MM/yyyy")</td>
                                    <td>@item.Role</td>
                                    <td>@item.StatusName</td>
                                    <td class="action" style="display: flex">
                                        @*<a href="#" class="settings" title="Settings" data-toggle="tooltip"><i class="material-icons">&#xE8B8;</i></a>*@
                                        <div>

                                            <a href="/ListUser/Delete?userId=@item.Id" class="delete" title="Delete" onclick="return confirm('Do you Want to delete?')"><i class="fa-solid fa-trash-can"></i></a>
                                        </div>
                                        <div>
                                            <a href="/ListUser/UnDelete?userId=@item.Id" class="un-delete" onclick="return confirm('Do you Want to delete?')">Un delete</a>
                                        </div>

                                    </td>

                                </tr>

                            }

                        }

                    </tbody>

                </table>
                <div class="clearfix">
                    <ul class="pagination">
                        @{
                            for (int listItem = 1; listItem <= Model.PageCount; listItem++)
                            {
                                <li class="page-item"><a href="/ListUser/ListUser?pageIndex=@listItem" class="page-link">@listItem</a></li>

                            }
                        }


                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{

}